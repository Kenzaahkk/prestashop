{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Laisser un commentaire</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.commentaire, 'Votre commentaire', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.commentaire) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.note, 'Votre note', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.note, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.note) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_prestation_details', {id: prestation.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                        <button class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Envoyer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}