{% extends 'base.html.twig' %}

{% block title %}Demandes Reçues{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-6 text-primary">Demandes Reçues</h1>
    </div>

    {% if demandes is empty %}
        <div class="alert alert-warning text-center">
            <i class="fas fa-info-circle"></i> Aucune demande reçue pour l'instant.
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Liste des Demandes</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>Prestation</th>
                            <th>Client</th>
                            <th>Date Début</th>
                            <th>Date Fin</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for demande in demandes %}
                            <tr>
                                <td>{{ demande.prestation.typePrestation.nom }}</td>
                                <td>{{ demande.client.email }}</td>
                                <td>{{ demande.dateDebutPrestation|date('d/m/Y') }}</td>
                                <td>{{ demande.dateFinPrestation|date('d/m/Y') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}