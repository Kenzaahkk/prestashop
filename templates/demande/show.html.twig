{% extends 'base.html.twig' %}

{% block title %}Détails de la Demande{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-6 text-primary">Détails de la Demande</h1>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Informations de la Demande</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ demande.id }}</td>
                    </tr>
                    <tr>
                        <th>Date de début</th>
                        <td>{{ demande.dateDebutPrestation ? demande.dateDebutPrestation|date('d/m/Y H:i') : '-' }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin</th>
                        <td>{{ demande.dateFinPrestation ? demande.dateFinPrestation|date('d/m/Y H:i') : '-' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_demande_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {{ include('demande/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}